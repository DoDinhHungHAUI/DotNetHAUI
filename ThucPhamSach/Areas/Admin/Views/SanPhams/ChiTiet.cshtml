@model ThucPhamSach.Models.SanPham

@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmim.cshtml";
}



<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="col-md-12 m-3">
            <!-- DATA TABLE -->
            <h3 class="title-5 m-b-35 title-page-admin">Chi Tiết Sản Phẩm</h3>


            <!-- END DATA TABLE -->
            <!-- Paging -->


            <div class="form-row " style="background-color:white">

                <div class="form-group col-md-12 m-3 ">
                    <label for="HoTen" class="mb-0"><span class="title-detail-page">Tên danh mục :</span>   @Html.DisplayFor(model => model.DanhMucSanPham.TenDanhMuc)</label>

                </div>
                <div class="form-group col-md-12 m-3">
                    <label for="HoTen" class="mb-0"><span class="title-detail-page">sản phẩm:</span> @Html.DisplayFor(model => model.TenSanPham)</label>

                </div>
                <div class="form-group col-md-12 m-3">
                    <label for="Email" class="mb-0"><span class="title-detail-page">Mô tả : </span>  @Html.DisplayFor(model => model.MoTa)</label>

                </div>
                <div class="form-group col-md-12 m-3">
                    <label for="DienThoai" class="mb-0"><span class="title-detail-page">Nhà cung cấp : </span> @Html.DisplayFor(model => model.NhaCungCap)</label>

                </div>
                <div class="form-group col-md-12 m-3">
                    <label for="DiaChi" class="mb-0"><span class="title-detail-page">Giá bán :</span>   @Html.DisplayFor(model => model.GiaBan) Vnđ</label>

                </div>
                <div class="form-group col-md-12 m-3">
                    <label for="DiaChi" class="mb-0">
                        <span class="title-detail-page">Ảnh :</span> 
                        @{
                            string imagePath = "~/wwwroot/Images/" + @Html.DisplayFor(model => model.Anh);
                        }
                        <img id="output" class="img-thumbnail" alt="ảnh" width="180" height="200" src="@Url.Content(imagePath)" />
                    </label>

                </div>
                <div class="form-group col-md-12 m-3">
                    <label for="DiaChi" class="mb-0"><span class="title-detail-page">Số lượng :</span>  @Html.DisplayFor(model => model.SoLuong)</label>

                </div>

            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">

                    @Html.ActionLink("Quay lại", "Index")
                </div>
            }
        </div>
    </div>


</div>


<style>
    .title-detail-page{
        font-weight:700 !important;
    }
    .form-row{
        margin-right:0px !important;
    }
</style>
