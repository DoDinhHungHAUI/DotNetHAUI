<!-- Start Shop Detail  -->
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <h2>Thông tin chi tiết sản phẩm <span style="font-weight:700">@Model.TenSanPham</span></h2>
        </div>
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">

                        @{ 
                            var imagePath = "~/wwwroot/images/" + Model.Anh;
                        }

                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@Url.Content(imagePath)"
                                 alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@Url.Content(imagePath)"
                                 alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@Url.Content(imagePath)"
                                 alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                        <span class="sr-only">Next</span>
                    </a>
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                            <img class="d-block w-100 img-fluid" src="@Url.Content(imagePath)" alt="" />
                        </li>
                        <li data-target="#carousel-example-1" data-slide-to="1">
                            <img class="d-block w-100 img-fluid" src="@Url.Content(imagePath)" alt="" />
                        </li>
                        <li data-target="#carousel-example-1" data-slide-to="2">
                            <img class="d-block w-100 img-fluid" src="@Url.Content(imagePath)" alt="" />
                        </li>
                    </ol>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>@Model.TenSanPham</h2>
                    <h5>@string.Format("{0:#,###}", Model.GiaBan) Vnđ</h5>
                    <p class="available-stock"><span> 20 sản phẩm có sẵn / <a href="#">8 sản phẩm đã bán </a></span>
                    <p>
                        <h4>Mô tả ngắn</h4>
                    <p>
                        @Model.MoTa
                    </p>
                    <ul>
                        <li>
                            <div class="form-group quantity-box">
                                <label class="control-label">Số lượng</label>
                                <input class="form-control" value="0" min="0" max="20" type="number">
                            </div>
                        </li>
                    </ul>

                    <div class="price-box-bar">
                        <div class="cart-and-bay-btn">
                            <a class="btn hvr-hover" data-fancybox-close="" href="#">Mua ngay</a>
                            <a class="btn hvr-hover" data-fancybox-close="" href="/Them-Gio-Hang?maSp=@Model.MaSP&soLuong=1">Thêm vào giỏ hàng</a>
                        </div>
                    </div>

                    <div class="add-to-btn">
                        <div class="add-comp">
                            <a class="btn hvr-hover" href="#"><i class="fas fa-heart"></i>Thêm vào danh sách yêu thích</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Sản phẩm liên quan</h1>
                    <p>CÁC SẢN PHẨM KHÁC CỦA SHOP</p>
                </div>
                <div class="featured-products-box owl-carousel owl-theme">

                    @foreach (var item in ViewBag.sanPhamRecomment)
                    {
                        <div class="item">
                            <div class="products-single fix">
                                <div class="box-img-hover">
                                    @{ 
                                        var imagePaths = "~/wwwroot/images/" + item.Anh;
                                    }
                                    <img src="@Url.Content(imagePaths)" class="img-fluid" alt="Image">
                                    <div class="mask-icon">
                                        <ul>
                                            <li>
                                                <a href="@Url.Action("ProductDetail" , "Product" , new { id = item.MaSP })" data-toggle="tooltip" data-placement="right" title="View">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </li>
                                            @*<li>
                                                <a href="#" data-toggle="tooltip" data-placement="right"
                                                   title="Compare"><i class="fas fa-sync-alt"></i></a>
                                            </li>
                                            <li>
                                                <a href="#" data-toggle="tooltip" data-placement="right"
                                                   title="Add to Wishlist"><i class="far fa-heart"></i></a>
                                            </li>*@
                                        </ul>
                                        <a class="cart" href="#">Add to Cart</a>
                                    </div>
                                </div>
                                <div class="why-text">
                                    <h4>@item.TenSanPham</h4>
                                    <h5>@string.Format("{0:#,###}", item.GiaBan) Vnđ</h5>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
</div>
<!-- End Cart -->
